<h1><a href='/'>Home</a></h1>

<h3>States currently in the Database</h3>

<form>
	<fieldset>
	<legend>Add New State</legend>
		<input type="text" id = "state" name="state" placeholder="State Name" required>
		<button onclick="addState()">Add State to Database</button>
	</fieldset>
</form>

<table id= "stateTable">
	<tr>
		<th>State Name</th>
		<th>Areas in State</th>
	<tr>

{{#each results}}
	<tr>
		<td><a href="/browse_areas/?state_id={{this.state_id}}">{{this.state}}</a></td>
		<td>{{this.area_count}}</td>
	</tr>
{{/each}}
</table>



<script src="/js/scripts.js"></script>
